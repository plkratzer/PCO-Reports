<!DOCTYPE html>
{% assign use_style = true %}
{% assign custom_style = "[custom stylesheet]" %}
{% assign org_logo = "[logo_url]" %}
{% assign people = people | sort: 'last_name' %}
<html lang="en">
  <head>
    <title>{{ report.name }}  - {{ 'now' | date: "%B %d, %Y" }}</title>
    <meta charset="utf-8">
    {{ helpers.bootstrap }}
    {% if use_style %}<link href="{{ custom_style }}" rel="stylesheet">{% endif %}
  </head>
  <body>
    <div class="header">
      <div class="header_left">
        <img src="{{ org_logo }}" alt="Organization Logo" />
      </div>
      <div class="header_right">
        <h1 class="title">{{ report.name }}</h1><br />
        <p style="display: inline;">List Updated: {{ list.updated_at  | date: "%B %d, %Y" }}</p>
      </div>
    </div>
    <div class="container">
			<table class="table table-striped">
        <thead>
        	<tr>
          	<th>Child</th>
            <th>Medical Notes</th>
            <th>Primary Contact</th>
            <th>Mobile Phone</th>
            <th>Check-In</th>
            <th>Check-Out</th>
          </tr>
        </thead>
        <tbody>
        {% for person in people %}
        	{% if person.primary_contacts == empty %}
        		<tr>
        			<td class="name">{{person.name}}</td>
              <td class="inner">{{person.medical_notes}}</td>
              <td class="inner"></td>
              <td class="inner"></td>
              <td class="name"></td>
              <td class="name"></td>
        		</tr>
        	{% endif %}
          {% for primary_contact in person.primary_contacts %}
					<tr>
            <td class="name">{{person.name}}</td>
            <td class="inner">{{person.medical_notes}}</td>
            <td class="inner">{{ primary_contact.name }}</td>
            <td class="inner">{% for phone_number in primary_contact.phone_numbers %}
                {%if phone_number.location == "Mobile" %}{{ phone_number.number }}{% endif %}
              {% endfor %}</td>
            <td class="name"></td>
            <td class="name"></td>
        </tr>
          {% endfor %}
        {% endfor %}
      </tbody>
      </table>
    </div>
  </body>
</html>

{% comment %}
